{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "es2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"declaration": true,
		"jsx": "preserve",
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["*.ts", "src/**/*.ts", "__test__/**/*.ts", "__test__/**/*.tsx", "package.json"],
	"exclude": ["node_modules", "dist"]
}
