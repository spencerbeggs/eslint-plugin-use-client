{
    "editor.formatOnSave": true,
    // "editor.codeActionsOnSave": {
    //     "source.fixAll": "explicit",
    //     "source.organizeImports": "explicit"
    // },
    "eslint.enable": true,
    "files.exclude": {
        "**/.turbo": true,
        "**/node_modules": true,
    },
    "eslint.debug": true,
    "eslint.validate": [
        "javascript",
        "typescript",
        "typescriptreact",
        "json"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "never"
        }
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "search.exclude": {
        "**/.turbo": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true
    }
}